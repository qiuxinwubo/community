<?xml version="1.0" encoding="UTF-8"?>
<webpage>
	<code>secondLevMenu</code>
	<url>/homepage/secondLevMenu</url>
	<!--热门视频 -->
	<datasets>
		<dataset>
			<name>ds1</name>
			<!-- 1SQL检索，2存储过程，3Text文件，4Xml文件，5Rolap,6 solr,7json文件 -->
			<type>1</type>
			<!-- 1单条，2前几条，3分页显示，4全部 -->
			<scope>3</scope>
			<pageSize>10</pageSize>
			<pageNoArg>pageNo</pageNoArg>
			<sql><![CDATA[
				select t.id,t.name,t.service_type,t.cover,nvl(t.collect_count,0)as collect_count,nvl(t.watch_count,0) as watch_count,
					vci.up_time,vci.if_shelves,nvl(vci.serial_number,10000)as sewrial_number,vci.if_login
				from 
					v_vms_video_countprop t,vms_cast_info vci
				where 1=1 ${1} and t.id = vci.id and vci.if_shelves='1' 
					order by serial_number asc,watch_count desc
			]]>
			</sql>
			<sqlparts>
			<sqlpart>
					<part>${1}</part>
					<type>1</type>
					<arg>service_type</arg>
					<defaultValue></defaultValue>
					<options>
						<option>
							<code>null</code>
							<value></value>
						</option>
						<option>
							<code>not null</code>
							<value> and t.service_type like ?</value>
						</option>
					</options>
				</sqlpart>
			</sqlparts>
			<vars>
			     <var>
					<argName>service_type</argName>
					<type>1</type>
					<prefix></prefix>
					<suffix></suffix>
				</var>
			</vars>
		</dataset>
	</datasets>
</webpage>